SECRET_KEY=django-insecure-change-this-in-production
DEBUG=True
ALLOWED_HOSTS=localhost,127.0.0.1,web,nginx

# Database (PostgreSQL)
DB_NAME=ujmp
DB_USER=ujmp_user
DB_PASSWORD=ujmp_password
DB_HOST=postgres
DB_PORT=5432

# Redis
REDIS_PASSWORD=redis_password
REDIS_PORT=6379

# CORS
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://localhost:5173,http://localhost

# File Storage (S3-compatible MinIO)
USE_S3=True
AWS_ACCESS_KEY_ID=minioadmin
AWS_SECRET_ACCESS_KEY=minioadmin
AWS_STORAGE_BUCKET_NAME=ujmp-media
AWS_S3_ENDPOINT_URL=http://minio:9000
AWS_S3_CUSTOM_DOMAIN=

# Celery
CELERY_BROKER_URL=redis://:redis_password@redis:6379/0
CELERY_RESULT_BACKEND=redis://:redis_password@redis:6379/0

# Payment Providers (testing)
PAYME_MERCHANT_ID=test_merchant_id
PAYME_SECRET_KEY=test_secret_key
CLICK_MERCHANT_ID=test_merchant_id
CLICK_SECRET_KEY=test_secret_key

# Certificate
CERTIFICATE_ISSUER_NAME=Unified Journal Management Platform
CERTIFICATE_VERIFICATION_BASE_URL=http://localhost/verify/certificate

# Email (MailHog)
EMAIL_BACKEND=django.core.mail.backends.smtp.EmailBackend
DEFAULT_FROM_EMAIL=noreply@ujmp.local
EMAIL_HOST=mailhog
EMAIL_PORT=1025
EMAIL_USE_TLS=False
EMAIL_HOST_USER=
EMAIL_HOST_PASSWORD=

# Webhook Security (for local dev, leave empty or set allowed IPs)
WEBHOOK_ALLOWED_IPS=

# MinIO root credentials
MINIO_ROOT_USER=minioadmin
MINIO_ROOT_PASSWORD=minioadmin

# Django Superuser (auto-created in Docker)
DJANGO_SUPERUSER_EMAIL=admin@ujmp.local
DJANGO_SUPERUSER_USERNAME=admin
DJANGO_SUPERUSER_PASSWORD=admin123